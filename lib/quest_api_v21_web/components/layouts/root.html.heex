<!DOCTYPE html>
<html lang="en" class="[scrollbar-gutter:stable]  max-h-screen">
  <head>
    <%= env = Application.get_env(:quest_api_v21_web, :env) %>
    <link rel="icon" href={if env == :prod, do: ~p"/favicon.ico", else: ~p"/images/dev-favicon.ico"} type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title suffix=" Â· Quest App">
      <%= assigns[:page_title] || "Quest" %>
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}>
    </script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F7RQVMPZHX">
    </script>

    <%= if System.get_env("MIX_ENV") == "prod" do %>
      <!-- Google tag (gtag.js) for Production Environment -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-F7RQVMPZHX">
      </script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-F7RQVMPZHX');
      </script>
    <% end %>
  </head>

  <body class={"antialiased bg-brand " <> (assigns[:body_class] || "bg-white")}>

    <%= @inner_content %>
  </body>
</html>
